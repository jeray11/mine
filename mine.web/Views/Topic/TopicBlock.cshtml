@model TopicModel
@using mine.web.Models.Topics;
@if (Model.IsPasswordProtected)
{

}
else
{
    <div class="topic-block">
        @if (!String.IsNullOrEmpty(Model.Title))
        {
            <div class="topic-block-title">
                <h2>@Model.Title</h2>
            </div>
        }
        <div class="topic-block-body">
            @Html.Raw(Model.Body)
        </div>
    </div>
}